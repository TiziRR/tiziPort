<div class="my-12 slider" style="--width: 100px; --height: 70px; --cantidad: 8;">
    <div class="list">
        <div class="item" style="--position: 1;"><img src="public/assets/astro.svg" alt=""></div>
        <div class="item" style="--position: 2;"><img src="public/assets/css.svg" alt=""></div>
        <div class="item" style="--position: 3;"><img src="public/assets/figma.svg" alt=""></div>
        <div class="item" style="--position: 4;"><img src="public/assets/html5.svg" alt=""></div>
        <div class="item" style="--position: 5;"><img src="public/assets/mysql.svg" alt=""></div>
        <div class="item" style="--position: 6;"><img src="public/assets/python.svg" alt=""></div>
        <div class="item" style="--position: 7;"><img src="public/assets/react.svg" alt=""></div>
        <div class="item" style="--position: 8;"><img src="public/assets/tailwindcss.svg" alt=""></div>
    </div>
</div>

<style>
    .slider {
        width: 100%;
        height: var(--height);
        overflow: hidden;
        mask-image: linear-gradient(
            to right,
            transparent,
            black 10% 90%,
            transparent
        );

        > .list {
            display: flex;
            width: 100%;
            min-width: calc(var(--width) * var(--cantidad));
            position: relative;

            > .item {
                width: var(--width);
                height: var(--height);
                position: absolute;
                left: 100%;
                animation: autoRun 10s linear infinite;
                animation-delay: calc( (10s / var(--cantidad)) * (var(--position) - 1) );

                > img {
                    width: 100%;
                    height: 100%;
                }
            }
        }
    }

    @keyframes autoRun {
        from {
            left: 100%;
        } to {
            left: calc(var(--width) * -1);
        }
    }
</style>