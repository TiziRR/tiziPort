---
interface Props {
    title: string;
    description: string;
    date: string;
}

const { title, description, date } = Astro.props;
---


<time
    class="text-center underline text-sm font-normal leading-none p-5"
    >{date}</time
>
<h3 class="text-lg font-semibold text-black">
    {title}
</h3>
<p class="mb-4 text-base font-normal text-slate-800 text-pretty">
    {description}
</p>

<style>
    time {
        color: rgb(3, 2, 22);
    }
</style>