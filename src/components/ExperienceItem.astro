---
interface Props {
    title: string;
    description: string;
    date: string;
}

const { title, description, date } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-black rounded-full mt-1.5 -start-1.5 border border-black dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
    class="mb-1 text-sm font-normal leading-none text-black bg-slate-300/65 p-2"
    >{date}</time
>
<h3 class="text-lg font-semibold text-black mt-2">
    {title}
</h3>
<p class="mb-4 text-base font-normal text-slate-800 text-pretty">
    {description}
</p>