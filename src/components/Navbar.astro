---
import ContactWindow from "./ContactWindow.astro";
---

<nav
    class="flex flex-col items-center pt-10 border-b-2 border-gray-300 dark:border-blue-800 dark:bg-gray-800"
>
    <h1 class="text-6xl font-medium dark:text-transparent dark:bg-clip-text dark:bg-gradient-to-r dark:from-sky-500 dark:to-sky-700 ">Tiziano</h1>
    <ul class="flex justify-evenly items-center w-full pt-10 pb-4 text-xl">
        <li
            class="hover:underline cursor-pointer dark:hover:no-underline dark:text-blue-600 dark:hover:text-blue-400"
        >
            <a href="/">Sobre mi</a>
        </li>
        <li
            class="hover:underline cursor-pointer dark:hover:no-underline dark:text-blue-600 dark:hover:text-blue-400"
        >
            <a href="/proyectos">Proyectos</a>
        </li>
        <li
            class="hover:underline cursor-pointer dark:hover:no-underline dark:text-blue-600 dark:hover:text-blue-400"
        >
            <a href="/blog">Blog</a>
        </li>
        <li class="relative">
            <button
                class="hover:underline dark:hover:no-underline dark:text-blue-600 dark:hover:text-blue-400"
                id="contact-but">Contacto</button
            >
            <ContactWindow />
        </li>
    </ul>
</nav>

<script>
    document
        .getElementById("contact-but")
        .addEventListener("click", function () {
            const fixedComponent = document.getElementById("componente");
            fixedComponent.classList.toggle("esconder");
        });
</script>
